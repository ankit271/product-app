<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
</head>

<body class="bg-gray-100">
    <%- include('partials/navbar') %>

        <div class="container mx-auto p-4">
            <h1 class="text-3xl font-bold mb-6">Products</h1>

            <% if (products.length===0) { %>
                <p class="text-gray-600">No products found. Add a new product!</p>
                <% } else { %>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% products.forEach(product=> { %>
                            <div class="bg-white rounded-lg shadow-md p-6">
                                <h2 class="text-xl font-semibold mb-2">
                                    <%= product.name %>
                                </h2>
                                <p class="text-gray-600 mb-2">
                                    <%= product.description %>
                                </p>
                                <p class="text-blue-600 font-bold mb-4">$<%= product.price.toFixed(2) %>
                                </p>
                                <div class="flex space-x-2">
                                    <a href="/products/<%= product.id %>"
                                        class="px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600">View</a>
                                    <a href="/products/<%= product.id %>/edit"
                                        class="px-3 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600">Edit</a>
                                    <form action="/products/<%= product.id %>/delete" method="POST" class="inline">
                                        <button type="submit"
                                            class="px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600">Delete</button>
                                    </form>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } %>
        </div>

        <%- include('partials/footer') %>
</body>

</html>